---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-lg m-8">
    <h1 class="text-2xl font-bold mb-4 text-center">Select Your Flights</h1>
    <div class="space-y-4">
      <div class="border-b pb-6">
        <h3 class="text-xl font-semibold mb-4">Outbound Flight</h3>
        <div class="grid gap-4" id="outbound-flights">
          <!-- Flight options will be inserted here -->
          <div
            class="flight-option p-4 border rounded-lg hover:border-blue-500 cursor-pointer"
          >
            <div class="flex justify-between items-center">
              <div>
                <p class="font-semibold">SkyWings</p>
                <p class="text-sm text-gray-600">
                  Departure: 08:00 - Arrival: 10:30
                </p>
              </div>
              <div class="text-right">
                <p class="text-lg font-bold">$199</p>
                <button
                  class="select-flight mt-2 px-4 py-1 bg-blue-600 text-white rounded hover:bg-blue-700"
                  >Select</button
                >
              </div>
            </div>
          </div>

          <div
            class="flight-option p-4 border rounded-lg hover:border-blue-500 cursor-pointer"
          >
            <div class="flex justify-between items-center">
              <div>
                <p class="font-semibold">CloudJet</p>
                <p class="text-sm text-gray-600">
                  Departure: 14:00 - Arrival: 16:30
                </p>
              </div>
              <div class="text-right">
                <p class="text-lg font-bold">$179</p>
                <button
                  class="select-flight mt-2 px-4 py-1 bg-blue-600 text-white rounded hover:bg-blue-700"
                >
                  Select
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <hr />

      <div
        id="return-flights-section"
        class="border-b pb-6"
        data-astro-source-file="/Users/rerades/_IB/repos/RERADES/poc-astro/src/pages/bolt.astro"
        data-astro-source-loc="73:68"
      >
        <h3
          class="text-xl font-semibold mb-4"
          data-astro-source-file="/Users/rerades/_IB/repos/RERADES/poc-astro/src/pages/bolt.astro"
          data-astro-source-loc="74:54"
        >
          Return Flight
        </h3>
        <div
          class="grid gap-4"
          id="return-flights"
          data-astro-source-file="/Users/rerades/_IB/repos/RERADES/poc-astro/src/pages/bolt.astro"
          data-astro-source-loc="75:59"
        >
          <!-- Return flight options will be inserted here -->
          <div
            class="flight-option p-4 border rounded-lg hover:border-blue-500 cursor-pointer"
          >
            <div class="flex justify-between items-center">
              <div>
                <p class="font-semibold">SkyWings</p>
                <p class="text-sm text-gray-600">
                  Departure: 08:00 - Arrival: 10:30
                </p>
              </div>
              <div class="text-right">
                <p class="text-lg font-bold">$199</p>
                <button
                  class="select-flight mt-2 px-4 py-1 bg-blue-600 text-white rounded hover:bg-blue-700"
                >
                  Select
                </button>
              </div>
            </div>
          </div><div
            class="flight-option p-4 border rounded-lg hover:border-blue-500 cursor-pointer"
          >
            <div class="flex justify-between items-center">
              <div>
                <p class="font-semibold">AirSpeed</p>
                <p class="text-sm text-gray-600">
                  Departure: 11:00 - Arrival: 13:30
                </p>
              </div>
              <div class="text-right">
                <p class="text-lg font-bold">$249</p>
                <button
                  class="select-flight mt-2 px-4 py-1 bg-blue-600 text-white rounded hover:bg-blue-700"
