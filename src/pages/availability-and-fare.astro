            <div class="flex justify-between items-center">
              <div>
                <p class="font-semibold">CloudJet</p>
                <p class="text-sm text-gray-600">
                  Departure: 14:00 - Arrival: 16:30
                </p>
              </div>
              <div class="text-right">
                <p class="text-lg font-bold">$179</p>
                <button
                  class="select-flight mt-2 px-4 py-1 bg-blue-600 text-white rounded hover:bg-blue-700"
                >
                  Select
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <a
        href="summary.html"
        class="block text-center mt-4 bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600"
        >Continue</a
      >
    </div>
  </div>
</Layout>
